<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="simulatedpayment.pay" path="/simulatedpayment/pay/{orderId}">
        <default key="_controller">SimulatedPayment\Controller\PaymentController::pay</default>
    </route>

    <route id="simulatedpayment.cancel" path="/simulatedpayment/cancel/{orderId}">
        <default key="_controller">SimulatedPayment\Controller\PaymentController::cancel</default>
    </route>
</routes>
